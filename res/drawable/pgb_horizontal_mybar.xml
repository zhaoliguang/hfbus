<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 定义轨道的背景 -->
    <item
        android:id="@android:id/background"
        android:drawable="@drawable/stroke_progressbar"/>
    <!-- 定义轨道上已完成部分的样式 -->
    <item android:id="@android:id/progress">
        <clip>
             
            <shape>
                <corners android:radius="7dp" />

                <gradient
                    android:angle="90"
                    android:endColor="#ffd58e"
                    android:startColor="#ff9517" />

                <padding
                    android:bottom="7dp"
                    android:left="7dp"
                    android:right="7dp"
                    android:top="7dp" />

                <stroke
                    android:width="1dp"
                    android:color="#330264B8" />
            </shape>
        </clip>
    </item>

</layer-list> <!-- 让图片重复而不是拉升 -->
