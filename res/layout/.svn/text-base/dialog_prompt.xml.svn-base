<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
	android:padding="5.0dip" android:layout_width="fill_parent"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:gravity="left" android:layout_width="1000dip"
			android:layout_height="1dip"  />
	<TextView android:textSize="@dimen/font_dialog_tip" android:id="@+id/tv_message"
		android:gravity="left" android:paddingTop="20.0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="友情提示：当前无网络连接，请检查您的网络状况。" 
		style="@style/CustomDialog.TextAppearance"/>
	<LinearLayout android:gravity="center_horizontal"
		android:orientation="horizontal" android:paddingTop="30.0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/btn_ok" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="是"
			style="@style/button_dialog" />
		<Button android:id="@+id/btn_cancel" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
			android:text="否" style="@style/button_dialog" />
	</LinearLayout>
</LinearLayout>