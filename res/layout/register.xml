<?xml version="1.0" encoding="utf-8"?>
<!-- 注册界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginP"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineLay_loginbox_big"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-40dp"
             android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/RelativeLay_loginbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_in_box"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lineLay_box2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="50dp" >
                <EditText
                    android:id="@+id/reg_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="请输入账号（≥4位）"
                    style="@style/set_order_style"
                    android:textColorHint="#18415f"
                    android:singleLine="true" />
                <EditText
                    android:id="@+id/reg_phonenumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="#18415f"
                    android:inputType="number"
                    android:hint="手机号"
                    android:maxLength="11"
                    style="@style/set_order_style"
                    android:singleLine="true" />
                    
               <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="请输入密码（≥6位）"
                    android:textColorHint="#18415f"
                    style="@style/set_order_style"
                    android:password="true"
                    android:singleLine="true" />
                    
                <EditText
                    android:id="@+id/reg_repassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="确认密码"
                    android:textColorHint="#18415f"
                    android:password="true"
                    style="@style/set_order_style"
                    android:singleLine="true" />



                <LinearLayout
                    android:id="@+id/lineLay_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/register_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/selector_ibtn_register" />

					<TextView
						android:layout_width="5dip"
                        android:layout_height="wrap_content"/>
                        
                    <ImageButton
                        android:id="@+id/register_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/selector_ibtn_register_reset" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>