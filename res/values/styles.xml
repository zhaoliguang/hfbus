<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 自定义标题栏 -->
    <style name="CustomWindowTitleBackground" parent="android:TextAppearance.WindowTitle">
        <item name="android:background">@drawable/bg_topbar</item>
    </style>
    <!-- 配置中使用的 -->
    <style name="CustomWindowTitleBar" parent="android:Theme">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
    </style>

    <style name="WindowTitle" parent="android:TextAppearance.WindowTitle">
        <item name="android:singleLine">true</item>
        <!-- <item name="android:shadowColor">#BB000000</item> <item name="android:shadowRadius">5.75</item> -->
    </style>

    <style name="TextAppearance.WindowTitle" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
  

    <!-- 自定义启动界面 防止界面启动前黑屏 -->
    <style name="MyTheme.NoTitleBar.CustomBackground" parent="@android:Theme.Black">
        <item name="android:windowBackground">@drawable/bg_welcome</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 自定义启动界面 防止界面启动前黑屏 -->

    <style name="MyTheme.CustomTitle" parent="android:Theme">
         <item name="android:windowTitleSize">70dp</item>  
    </style>
 	<style name="set_order_style" >
 	    
 	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
 	    <item name="android:textColor">#18415f</item>
 	    <item name="android:textSize">20sp</item>
 	</style>
 	<style name="order_list_style" >
 	    <item name="android:textColor">#18415f</item>
 	</style>
 

    <!-- This theme is similar to the Theme.Dialog.Alert but does not rely on a
         non-public resource. -->

    <style name="RoundTouchButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/incall_round_button</item>
    </style>

    <style name="ButtonStripLeft">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_left</item>
    </style>
    <style name="ButtonStripMiddle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_middle</item>
    </style>
    <style name="ButtonStripRight">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_right</item>
    </style>

    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>
     <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
     <!-- 自定义标题栏结束-->

	<style name="CustomSpinner" parent="@android:style/Widget.Spinner">
		<item name="android:background">@drawable/spinner_bg</item>
		<item name="android:paddingLeft">5.0dip</item>
	</style>
	<style name="CustomSpinnerItem">
		<item name="android:textAppearance">@style/spinner_TextAppearance</item>
	</style>
	<style name="spinner_TextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/black</item>
	</style>

    <!-- 自定义弹出对话框 -->
	<style name="CustomDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowBackground">@drawable/dialog_bg</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:spinnerStyle">@style/CustomSpinner</item>
		<item name="android:textViewStyle">@style/CustomDialog.TextView</item>
		<item name="android:spinnerItemStyle">@style/CustomSpinnerItem</item>
		<item name="android:windowFullscreen">true</item>
	</style>
	<style name="CustomDialog.TextView" parent="@android:style/Widget.TextView">
		<item name="android:textAppearance">@style/CustomDialog.TextAppearance</item>
	</style>
	<style name="CustomDialog.TextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/dialog_content</item>
	</style>
	<style name="CustomDialog.SpinnerItem" parent="@android:style/Widget.DropDownItem.Spinner">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="button_dialog" parent="@style/button_normal" />
	<style name="button_big" parent="@style/button_normal">
		<item name="android:layout_height">40dip</item>
	</style>
	<style name="button_normal" parent="@android:style/Widget.Button">
		<item name="android:textSize">16.0dip</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/button_bg</item>
		<item name="android:paddingLeft">15.0dip</item>
		<item name="android:paddingRight">15.0dip</item>
	</style>

	<style name="custom_autocomplete_text" parent="@android:style/Widget.AutoCompleteTextView">
		<item name="android:background">@drawable/edit_text</item>
	</style>
	<style name="custom_edit_text" parent="@android:style/Widget.EditText">
		<item name="android:background">@drawable/edit_text</item>
	</style>
	<style name="custom_CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/btn_check</item>
	</style>
	
	
	<style name="dtb_bg_default">
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:paddingTop">1.0dip</item>
		<item name="android:paddingBottom">1.0dip</item>
		<item name="android:paddingLeft">0.0dip</item>
		<item name="android:paddingRight">0.0dip</item>
		<item name="android:textSize">20sp</item>
		
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:ellipsize">marquee</item>
	</style>
	<style name="dtb_bg_clickable">
		<item name="android:background">@android:drawable/list_selector_background</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:paddingTop">1.0dip</item>
		<item name="android:paddingBottom">1.0dip</item>
		<item name="android:paddingLeft">0.0dip</item>
		<item name="android:paddingRight">0.0dip</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:ellipsize">marquee</item>
	</style>
	
	<style name="popWindowgStyle" parent="android:style/Theme.Dialog"> 
		<item name="android:windowBackground">@android:color/transparent</item> 
		<item name="android:windowFrame">@null</item> 
		<item name="android:windowNoTitle">true</item> 
		<item name="android:windowIsFloating">true</item> 
		<item name="android:windowIsTranslucent">true</item> 
		<item name="android:windowContentOverlay">@null</item> 
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> 
		<item name="android:backgroundDimEnabled">true</item> 
	</style> 
	
</resources>