<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/llQiDian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_start" />

        <TextView
            android:id="@+id/tvQiDian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/set_order_style"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0000FF"
            android:text="新大郅" />

        <TextView
            android:id="@+id/mapLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
              style="@style/set_order_style"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0000FF"
            android:text="地图查看" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/llHuanChen1"
        android:layout_marginTop="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_bus" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:id="@+id/llTvXianLu1">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/set_order_style"
                     android:textColor="#FF0000"
                    android:text="乘坐  " />

                <TextView
                    android:id="@+id/tvXianLu1"
                    style="@style/set_order_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="143路"
                    android:textColor="#FF0000" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvZhanShu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                style="@style/set_order_style"
                android:text="13站" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/llQDZZ"
            android:layout_marginTop="3dp" >

            <TextView
                android:id="@+id/textView4"
                 android:layout_marginLeft="22dp"
                style="@style/set_order_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在 " />

            <TextView
                android:id="@+id/tvxiaChe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/set_order_style"
                android:textColor="#0000FF"
                android:text="滁州路" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/set_order_style"
                android:text=" 下车" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp" 
        android:id="@+id/llBuXing" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_people" />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/set_order_style"
            android:text="步行至  " />

        <TextView
            android:id="@+id/tvZhongZhuanZhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/set_order_style"
            android:textColor="#0000FF"
            android:text="滁州路" />

        <TextView
            android:id="@+id/tvMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             style="@style/set_order_style"
             android:singleLine="false"
            android:text="约267米" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llHuanCheng2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_marginTop="2dp" 
               android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_bus" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:id="@+id/llTvXianLu2">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/set_order_style"
                    android:textColor="#FF0000"
                    android:text="乘坐  " />

                <TextView
                    android:id="@+id/tvXianLu2"
                    style="@style/set_order_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48路"
                    android:textColor="#FF0000" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvZhanShu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="60dp"
                 style="@style/set_order_style"
                android:text="4站" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/llZDXC"
            android:layout_marginTop="3dp"  >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/set_order_style"
                android:layout_marginLeft="22dp"
                android:text="在  " />

            <TextView
                android:id="@+id/tvXiaChe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/set_order_style"
                android:textColor="#0000FF"
                android:text="杏花公园北" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/set_order_style"
                android:text=" 下车" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" 
        android:id="@+id/llZongDian" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_end" />

        <TextView
            android:id="@+id/tvZongDian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            style="@style/set_order_style"
             android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0000FF"
            android:text="杏花公园北" />
    </LinearLayout>

</LinearLayout>